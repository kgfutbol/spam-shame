{
  "name" : "Spam Shame",
  "description" : "in the works",
  "version" : "0.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "images/SpamShameLogo16.png",
    "32": "images/SpamShameLogo32.png",
    "48": "images/SpamShameLogo48.png",
    "128": "images/SpamShameLogo128.png"
  },
  "background" : {
    "scripts" : ["./src/background.js"]
  },
  "content_security_policy": "script-src 'self' https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js; object-src 'self'",
  "content_scripts": [
    {
      "matches" : ["<all_urls>"],
      "js" : ["./src/content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Spam Shame"
  },
  "options_ui": {
    "page": "./options.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "tabs",
    "<all_urls>"
  ]
}